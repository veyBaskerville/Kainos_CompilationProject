<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="monospace"
            android:text="Elective 1 : Compilation Project"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="monospace"
            android:text="Group : Kainos"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView9" />



        <Button
            android:id="@+id/btn1stguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="#2F4156"
            android:text="1st GE: EditText, TextView, and Button"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView10" />

        <Button
            android:id="@+id/btn2ndguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="2nd GE: Toast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn1stguided" />

        <Button
            android:id="@+id/btn3rdguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="3rd GE: Sum and Average"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn2ndguided" />

        <Button
            android:id="@+id/btn4thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="4th GE: Welcome to Android Development"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn3rdguided" />

        <Button
            android:id="@+id/btn5thguided"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="5th GE: Radio Button, Radio Group, and Background Color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn4thguided" />

        <Button
            android:id="@+id/btn6thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="6th GE: Checkbox and Text Color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn5thguided" />

        <Button
            android:id="@+id/btn7thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="7th GE: Rating Bar and Alert Dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn6thguided" />

        <Button
            android:id="@+id/btn8thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="8th GE: Spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn7thguided" />

        <Button
            android:id="@+id/btn9thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="9th GE: List View"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn8thguided" />

        <Button
            android:id="@+id/btn10thguided"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="10th GE: WebView and AutoComplete TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn9thguided" />

        <Button
            android:id="@+id/btn11thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="11.1th GE: Intent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn10thguided" />

        <Button
            android:id="@+id/btn11thguided3"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="11.2th GE: Drag and Drop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn11thguided" />

        <Button
            android:id="@+id/btn12thguided"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="12th GE: Notification and Broadcast Receiver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn11thguided3" />

        <Button
            android:id="@+id/btn13thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="13th GE: Email and Camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn12thguided" />

        <Button
            android:id="@+id/btn14thguided"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="14th GE: SMS and Phone Call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn13thguided" />

        <Button
            android:id="@+id/btnSplashScreen"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="Splash Screen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn14thguided" />

        <Button
            android:id="@+id/btnCCJitters"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="CC Jitters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSplashScreen" />

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="Calculator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCCJitters" />

        <Button
            android:id="@+id/btnPayroll"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="Payroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCalculator" />

        <Button
            android:id="@+id/btnPayrollSQL"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2F4156"
            android:text="Payroll SQL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPayroll" />

        <Button
            android:id="@+id/btnBookLibrary"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#2F4156"
            android:text="Book Library"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPayrollSQL" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
